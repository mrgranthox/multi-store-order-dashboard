# API Configuration
REACT_APP_API_URL=http://localhost:4000/api
REACT_APP_STRAPI_URL=http://localhost:1337/api
REACT_APP_SOCKET_URL=http://localhost:4000

# App Configuration
REACT_APP_APP_NAME=Multi-Store Admin Dashboard
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_DESCRIPTION=Multi-Store Admin Dashboard
REACT_APP_APP_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_MONITORING=true
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_OFFLINE_MODE=false

# Security Configuration
REACT_APP_ENABLE_CSRF_PROTECTION=true
REACT_APP_ENABLE_XSS_PROTECTION=true
REACT_APP_ENABLE_CSP=true

# Performance Configuration
REACT_APP_ENABLE_CACHING=true
REACT_APP_CACHE_TTL=300000
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_VIRTUAL_SCROLLING=true

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ANIMATION_DURATION=300

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# External Services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id
REACT_APP_HOTJAR_ID=your_hotjar_id

# Development
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_MOCK_API_DELAY=1000

# Production
REACT_APP_ENABLE_SOURCE_MAPS=false
REACT_APP_ENABLE_ANALYZE_BUNDLE=false
